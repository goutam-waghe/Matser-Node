                                        },
                                        "data": {
                                            "type": "object",
                                            "properties": {
                                                "_id": {
                                                    "type": "string",
                                                    "example": "65a9b3f2d12e5c1234abcd56"
                                                },
                                                "userName": {
                                                    "type": "string",
                                                    "example": "John Doe"
                                                },
                                                "profileImage": {
                                                    "type": "string",
                                                    "example": "uploads/profileImage_1700000000000.jpg"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request - No file uploaded",
